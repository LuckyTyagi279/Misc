set mouse=a
set showmatch
set autoindent
set number
colorscheme murphy
set wrap
set guifont=Oxygen\ Mono\ 13
syntax on
set tabstop=4	"TAB is read as 4 spaces when reading a file
set softtabstop=4	"TAB is set as 4 spaces when editing a file
set showcmd	"Shows the last command entered in bottom right
set cursorline	"Draws a horizontal highlight on the line your cursor is currently on
set wildmenu	"Visual autocomplete for comand menu
set incsearch	"Search as char are entered
set hlsearch	"Highlight matches
